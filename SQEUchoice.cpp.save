void User_Choice (int* your_choice)
{
    while (scanf("%d", your_choice) != 1)
    {
        clear_buf();
        printf("Please, write a correct number. \n");
    }
    while (*your_choice != 1 && *your_choice != 2 && *your_choice != 3)
    {
        clear_buf();
        printf("Make correct choice: 1, 2 or 3! \n");
    }
    
}
